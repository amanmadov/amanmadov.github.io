<BaseLayout>
	<!-- Hero Section -->
	<section class="section-hero">
		<div class="container">
			<div class="hero-content">
				<h1 class="hero-title">
					I architect enterprise-scale solutions at the intersection of Cloud
					Infrastructure, Intelligent Automation, and AI
				</h1>
				<p class="hero-subtitle">
					Senior Infrastructure Engineer advancing global health research at IHME,
					University of Washington, building Cloud infrastructure, Salesforce ecosystems,
					and AI-powered platforms serving 20,000+ collaborators across 170+ countries
				</p>
				<div class="hero-cta">
					<a href="#projects" class="btn btn-primary">View My Work</a>
					<a href="#contact" class="btn">Get In Touch</a>
				</div>
			</div>
		</div>
	</section>

	<!-- About Section -->
	<section id="about" class="section">
		<div class="container container-narrow">
			<h2>About Me</h2>
			<div class="about-content">
				<p>
					I'm a Senior Infrastructure Engineer with a proven track record of architecting
					enterprise-scale solutions that bridge cloud infrastructure, intelligent
					automation, and data-driven systems. Currently advancing global health research
					at the Institute for Health Metrics and Evaluation (University of Washington), I
					engineer robust Cloud infrastructure, Salesforce ecosystems, and AI-powered
					automation platforms that serve 20,000+ collaborators across 170+ countries.
				</p>
				<p>
					My expertise spans the full spectrum of modern infrastructure engineering: from
					designing highly scalable Salesforce architectures and CI/CD pipelines to
					orchestrating Kubernetes clusters and building intelligent automation systems
					using RPA and Machine Learning. I've delivered transformative results at
					scale—achieving <strong>65-90%</strong> efficiency gains through automation, reducing
					data discrepancies by <strong>80%</strong>, and architecting systems that
					process complex workflows for leading research institutions.
				</p>
				<p>
					With dual Master's degrees in Information Systems and Information Technologies,
					extensive AWS and Salesforce certifications, and published research in
					AI-powered software systems, I combine deep technical expertise with strategic
					vision. I thrive at the intersection of Infrastructure, Automation, and
					Artificial Intelligence — building resilient, scalable systems that drive
					measurable business impact while mentoring teams and establishing engineering
					excellence standards.
				</p>
			</div>
		</div>
	</section>

	<!-- Projects Section -->
	<section id="projects" class="section section-projects">
		<div class="container">
			<div class="section-header">
				<h2>Featured Projects</h2>
				<p>
					A selection of my work in Cloud Infrastructure, Automation, and Enterprise
					Solutions
				</p>
			</div>
			<div class="projects-grid">
				{projects.map((project) => <ProjectCard {...project} />)}
			</div>
		</div>
	</section>

	<!-- Experience Section -->
	<section id="experience" class="section">
		<div class="container container-narrow">
			<div class="section-header">
				<h2>Work Experience</h2>
				<p>My professional journey in building and scaling infrastructure</p>
			</div>
			<div class="timeline">
				{experience.map((job) => <TimelineItem {...job} />)}
			</div>
		</div>
	</section>

	<!-- Education Section -->
	<section id="education" class="section section-education">
		<div class="container container-narrow">
			<div class="section-header">
				<h2>Education</h2>
				<p>Academic background and achievements</p>
			</div>
			<div class="timeline">
				{education.map((edu) => <EducationItem {...edu} />)}
			</div>
		</div>
	</section>

	<!-- Publications Section -->
	<section id="publications" class="section section-publications">
		<div class="container">
			<div class="section-header">
				<h2>Papers & Publications</h2>
				<p>Research contributions and technical publications</p>
			</div>
			<div class="publications-list">
				{publications.map((publication) => <PublicationCard {...publication} />)}
			</div>
		</div>
	</section>

	<!-- Certifications Section -->
	<section id="certifications" class="section section-certifications">
		<div class="container">
			<div class="section-header">
				<h2>Certifications</h2>
				<p>Professional certifications and credentials</p>
			</div>
			<div class="certifications-grid">
				{certifications.map((cert) => <CertificationCard {...cert} />)}
			</div>
		</div>
	</section>

	<!-- Skills Section -->
	<section id="skills" class="section section-skills">
		<div class="container">
			<div class="section-header">
				<h2>Skills & Technologies</h2>
				<p>Technologies and tools I work with</p>
			</div>
			<div class="skills-grid">
				{
					Object.entries(skills).map(([category, skillList]) => (
						<SkillCategory category={category} skills={skillList} />
					))
				}
			</div>
		</div>
	</section>

	<!-- Contact Section -->
	<ContactForm />
